generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
}

model Customer {
  id        String @id @default(uuid())
  name      String
  email     String @unique
  image_url String
}

model Product {
  id          String @id @default(uuid())
  name        String
  price       Float
  image       String
  description String
}
